patch -p1 < $SRCDIR/patches/kgstartup_cpp_fix.patch
patch -p1 < $SRCDIR/patches/krview_geticon_fix.patch

cd_builddir_fn

LDFLAGS="${SLKLDFLAGS}" \
CFLAGS="${SLKCFLAGS} $TQT_INCLUDE_PATH" \
CXXFLAGS="${SLKCFLAGS}" \
CC=${COMPILER} \
